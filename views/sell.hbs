{{> header }}
<style>
    .centered {
        padding: 1%;
        align-self: center;
        display: flex;
    }
    button {
      margin: 1%;
    }
    </style>
<h1 class="cover-heading jumbotron bg-warning container">{{title}}</h1>

{{#if errors}}
    {{#each errors}}
        <div>{{this.msg}}</div>
    {{/each}}
{{/if}}

<div class="container">
<form action="/sell" method="post">
    <div class="form-group">
        <label for="itemName">Item name: </label>
        <input type="text" class="form-control" name="itemName"
            placeholder="Enter Item Name">
    </div>

    <div class="form-group">
        <label for="itemPrice">Item price: </label>
        <input type="text" class="form-control" name="itemPrice"
            placeholder="Enter Item Price">
    </div>

    <div class="form-group">
        <label for="itemDescription">Item price: </label>
        <input type="text" class="form-control" name="itemDescription"
            placeholder="Enter Item Description">
    </div>

     <div class="form-group">
        <label for="itemQuantity">Item itemQuantity: </label>
        <input type="text" class="form-control" name="itemQuantity"
            placeholder="Enter Item Quantity">
    </div>
    <button type="submit" class=" justify-content-center centered lead btn btn-lg btn-secondary container">Sell</button>
 </form>
</div>
{{> footer-end }}